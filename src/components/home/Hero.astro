---
import EarlyAccessButton from "./EarlyAccessButton.astro";
import { Image } from "astro:assets";
const { title, description } = Astro.props;
---

<section
  class="relative mb-24 rounded-xl bg-gradient-to-r from-blue-400 to-sky-200 pt-8 pr-4 pb-4 pl-8 text-white"
>
  <div class="flex flex-col md:flex-row">
    <div class="mb-6 flex-2/5">
      <h2 class="mb-12 text-4xl font-extrabold">{title}</h2>
      <p class="mb-12 text-justify text-xl">{description}</p>
      <EarlyAccessButton />
    </div>
    <div class="flex-3/5">
      <Image
        src={import("../../assets/hero.png")}
        alt="TestLens Bot in Action"
      />
    </div>
  </div>
</section>
