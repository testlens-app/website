---
import EarlyAccessButton from "./EarlyAccessButton.astro";
import { Image } from "astro:assets";
const { title, description } = Astro.props;
---

<section
  class="relative mb-12 rounded-xl bg-gradient-to-r from-blue-400 to-sky-200 pt-8 pr-4 pb-4 pl-8 text-white sm:mb-24"
>
  <div class="flex flex-col md:flex-row">
    <div class="mb-4 flex-2/5 sm:mb-8">
      <h2 class="mb-8 text-2xl font-extrabold sm:mb-12 sm:text-4xl">{title}</h2>
      <p class="mb-8 text-justify text-xl sm:mb-12">{description}</p>
      <EarlyAccessButton />
    </div>
    <div class="hidden flex-3/5 sm:block">
      <Image
        src={import("../../assets/hero.png")}
        alt="TestLens Bot in Action"
      />
    </div>
  </div>
</section>
