---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { actions } from "../data/homepage.json";

interface Props {
  pagetitle: string;
}

const { pagetitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="fediverse:creator" content="@testlens@mastodon.social">
    <link rel="icon" href="/favicon.png" sizes="any" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{pagetitle}</title>
  </head>
  <body
    class="text-dark flex min-h-screen flex-col bg-gradient-to-b from-slate-50 via-slate-100 to-slate-200 font-sans"
  >
    <Header />
    <main class="mx-auto max-w-5xl px-4 py-8">
      <slot />
    </main>
    <Footer />

    <div
      id="sign-up-form"
      class="invisible fixed inset-0 z-50 flex items-center justify-center bg-white/30 backdrop-blur-sm"
    >
      <div class="w-full max-w-sm rounded-lg bg-white p-6 shadow-lg">
        <h2 class="mb-2 text-xl font-bold">Get Early Access</h2>
        <p class="mb-4 text-sm text-gray-600">
          {actions.contact}
        </p>
        <form
          name="sign-up-form"
          method="POST"
          netlify-honeypot="bot-field"
          data-netlify="true"
        >
          <p class="hidden">
            <label>
              Don’t fill this out if you’re human: <input name="bot-field" />
            </label>
          </p>
          <label class="mb-2 block">
            <span class="text-gray-700">Name</span>
            <input
              type="text"
              name="name"
              required
              class="mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-300 focus:ring focus:outline-none"
              placeholder="Your name"
            />
          </label>
          <label class="mb-2 block">
            <span class="text-gray-700">GitHub handle (username/organization)</span>
            <input
                type="text"
                name="github"
                required
                class="mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-300 focus:ring focus:outline-none"
                placeholder="your-username/organization"
            />
          </label>
          <label class="mb-2 block">
            <span class="text-gray-700">Email</span>
            <input
                type="email"
                name="email"
                required
                class="mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-300 focus:ring focus:outline-none"
                placeholder="you@example.com"
            />
          </label>
          <div class="mt-4 flex justify-end gap-2">
            <button
              onclick="toggleSignupForm()"
              type="button"
              class="cursor-pointer rounded bg-gray-200 px-4 py-2 text-gray-700 hover:bg-gray-300"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="cursor-pointer rounded bg-blue-600 px-4 py-2 text-white hover:bg-blue-700"
            >
              Sign Up
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>

  <script is:inline>
    document.querySelectorAll("[data-signup-trigger]").forEach(button => {
      button.addEventListener("click", toggleSignupForm);
    });

    function toggleSignupForm(event) {
      document.getElementById("sign-up-form").classList.toggle("invisible");
      event.preventDefault();
    }
  </script>
</html>
