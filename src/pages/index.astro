---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { steps, hero, actions, title } from "../data/homepage.json";
import team from "../data/team.json";
import type { ImageMetadata } from "astro";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "../assets/process/*.png"
);
---

<Layout pagetitle={title}>
  <section
    class="relative mb-24 rounded-xl bg-gradient-to-r from-blue-400 to-sky-200 pt-8 pr-4 pb-4 pl-8 text-white"
  >
    <div class="flex flex-col md:flex-row">
      <div class="mb-6 flex-2/5">
        <h2 class="mb-12 text-4xl font-extrabold">{hero.title}</h2>
        <p class="mb-12 text-justify text-xl">{hero.description}</p>
        <button
          data-signup-trigger
          class="cursor-pointer rounded-lg bg-blue-600 px-6 py-3 text-lg text-white transition hover:bg-blue-700"
        >
          Get Early Access
        </button>
      </div>
      <div class="flex-3/5">
        <Image
          src={import("../assets/hero.png")}
          alt="TestLens Bot in Action"
        />
      </div>
    </div>
  </section>

  <section class="space-y-10">
    {
      steps.map((step, index) => (
        <div class="flex flex-col items-center gap-8 md:flex-row">
          <div class="flex-1">
            <h3 class="text-dark mb-3 text-2xl font-semibold">
              {index + 1}. {step.title}
            </h3>
            <p class="text-xl">{step.description}</p>
          </div>
          <div class="flex-1">
            <Image
              src={images["../assets/process/" + step.image]()}
              alt={step.alt}
            />
          </div>
        </div>
      ))
    }

    <section class="mt-10 text-center">
      <button
        data-signup-trigger
        class="cursor-pointer rounded-lg bg-blue-600 px-6 py-3 text-lg text-white transition hover:bg-blue-700"
      >
        Get Early Access
      </button>
      <p class="text-muted mt-4 mb-6">
        {actions.join}
      </p>
    </section>

    <section class="mt-10 text-center">
      <h3 class="text-dark mb-4 text-3xl font-bold">Team</h3>
      <p class="text-muted mt-4 mb-6">
        Brought to you by leading developer productivity experts.
      </p>
      <div class="flex flex-col gap-8 align-top md:flex-row">
        {
          team.map(member => (
            <div class="flex-1 space-x-6 rounded-2xl bg-white p-4 shadow-md hover:shadow-lg">
              <div class="flex space-x-4">
                <img
                  class="h-14 w-14 rounded-full border-2 border-blue-600 object-cover"
                  src={member.picture}
                  alt={`${member.name} Profile Picture`}
                />
                <div>
                  <h2 class="text-lg font-semibold text-gray-800">
                    {member.name}
                  </h2>
                  <div class="mt-2 flex space-x-4">
                    {member.socialLinks.github && (
                      <a
                        href={member.socialLinks.github}
                        title="GitHub"
                        target="_blank"
                      >
                        <Icon
                          name="github"
                          class="h-6 w-6 text-gray-600 hover:text-gray-800"
                        />
                      </a>
                    )}
                    {member.socialLinks.mastodon && (
                      <a
                        href={member.socialLinks.mastodon}
                        title="Mastodon"
                        target="_blank"
                      >
                        <Icon
                          name="mastodon"
                          class="h-6 w-6 text-gray-600 hover:text-purple-800"
                        />
                      </a>
                    )}
                    {member.socialLinks.linkedin && (
                      <a
                        href={member.socialLinks.linkedin}
                        title="LinkedIn"
                        target="_blank"
                      >
                        <Icon
                          name="linkedin"
                          class="h-6 w-6 text-gray-600 hover:text-blue-800"
                        />
                      </a>
                    )}
                    {member.socialLinks.youtube && (
                      <a
                        href={member.socialLinks.youtube}
                        title=">ouTube"
                        target="_blank"
                      >
                        <Icon
                          name="youtube"
                          class="h-6 w-6 text-gray-600 hover:text-blue-800"
                        />
                      </a>
                    )}
                  </div>
                </div>
              </div>
              <p class="mt-2 flex-1 text-justify text-sm text-gray-600">
                {member.bio}
              </p>
            </div>
          ))
        }
      </div>
    </section>
  </section>
</Layout>
