---
import Layout from "../layouts/Layout.astro";
import EarlyAccess from "../components/home/EarlyAccess.astro";
import Hero from "../components/home/Hero.astro";
import Steps from "../components/home/Steps.astro";
import Team from "../components/home/Team.astro";
import { steps, hero, actions, title } from "../data/homepage.json";
import team from "../data/team.json";
---

<Layout pagetitle={title}>
  <Hero title={hero.title} description={hero.description} />
  <Steps steps={steps} />
  <EarlyAccess text={actions.join} />
  <Team members={team} />
</Layout>
